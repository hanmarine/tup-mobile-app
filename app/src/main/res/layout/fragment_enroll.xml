<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color"
    tools:context=".EnrollFragment">

    <FrameLayout
        android:id="@+id/rectangle_container"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="400dp"
        android:background="@drawable/tup_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="160dp">

        <!-- Student Name, Program, School Year, Status -->
        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/course_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course and Year Level"
            android:layout_marginTop="50dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="School Year: 2023-2024"
            android:layout_marginTop="75dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Regular"
            android:layout_marginTop="100dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <!-- Student No., Year Level, Semester -->
        <TextView
            android:id="@+id/student_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student No."
            android:layout_marginTop="150dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester:"
            android:layout_marginTop="175dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black" />

        <Spinner
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/sem_enrollment"
            android:padding="15dp"
            android:background="@drawable/menu_input" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registration is not yet open."
            android:layout_marginTop="320dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/tup_color" />

    </FrameLayout>

    <TextView
        android:id="@+id/curr_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Current Date"
        android:layout_marginTop="130dp"/>

</FrameLayout>