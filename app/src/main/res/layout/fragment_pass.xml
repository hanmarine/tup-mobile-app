<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color"
    tools:context=".GraduationFragment">

    <FrameLayout
        android:id="@+id/rectangle_container"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="520dp"
        android:background="@drawable/tup_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="160dp">

        <!-- New Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Password:"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/new_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="180dp"
            android:importantForAutofill="no"
            android:hint="Enter New Password"
            android:textColor="@color/black"
            android:textColorHint="@color/light_gray"
            android:textSize="15sp"
            android:background="@drawable/menu_input"
            android:padding="15dp"
            android:inputType="textPassword" />

        <!-- Confirm Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password:"
            android:layout_marginTop="130dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirm_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:importantForAutofill="no"
            android:layout_marginBottom="70dp"
            android:hint="Confirm New Password"
            android:textColor="@color/black"
            android:textColorHint="@color/light_gray"
            android:textSize="15sp"
            android:background="@drawable/menu_input"
            android:padding="15dp"
            android:inputType="textPassword" />

        <!-- Old Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Old Password:"
            android:layout_marginTop="250dp"
            android:layout_marginStart="25dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/old_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:importantForAutofill="no"
            android:hint="Enter Old Password"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"
            android:textColorHint="@color/light_gray"
            android:textSize="15sp"
            android:background="@drawable/menu_input"
            android:padding="15dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/change_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:backgroundTint="@color/tup_color"
            android:padding="12dp"
            android:text="change password"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/clear_pass"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:backgroundTint="@color/tup_color"
            android:padding="12dp"
            android:text="clear entries"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </FrameLayout>

    <TextView
        android:id="@+id/curr_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Current Date"
        android:layout_marginTop="250dp"/>
</FrameLayout>