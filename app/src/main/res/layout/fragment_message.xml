<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_color"
    tools:context=".MessageFragment">

    <FrameLayout
        android:id="@+id/rectangle_container"
        android:layout_width="300dp"
        android:layout_gravity="center|top"
        android:layout_height="wrap_content"
        android:background="@drawable/tup_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="160dp">

        <Button
            android:id="@+id/inbox_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="inbox"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/compose_button"
            android:layout_marginTop="50dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="compose"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/draft_button"
            android:layout_marginTop="100dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="draft"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/sent_button"
            android:layout_marginTop="150dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="sent"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/trash_button"
            android:layout_marginTop="200dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/white"
            android:padding="12dp"
            android:text="trash"
            android:textColor="@color/black"
            android:textSize="12sp" />


    </FrameLayout>

    <FrameLayout
        android:id="@+id/rectangle_container2"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="200dp"
        android:background="@drawable/tup_content"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="25dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Inbox" />

        <TableLayout
            android:layout_width="250dp"
            android:layout_gravity="center|top"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <TableRow
                android:background="@color/tup_color">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Sender" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Subject" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Date" />

            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/delete_button"
            android:layout_marginTop="100dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:backgroundTint="@color/tup_color"
            android:padding="12dp"
            android:text="delete"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </FrameLayout>

    <!-- Current Date -->
    <TextView
        android:id="@+id/curr_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Current Date"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"/>

</FrameLayout>